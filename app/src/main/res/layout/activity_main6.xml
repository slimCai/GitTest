<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="in.goodiebag.example.Main6Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <View
            android:onClick="aaaa"
            android:layout_width="0dp"
            android:background="#ff0000"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <View
            android:onClick="bbbb"
            android:layout_width="0dp"
            android:background="#ff00ff"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <View
            android:onClick="cccc"
            android:layout_width="0dp"
            android:background="#ffff00"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <View
            android:onClick="dddd"
            android:background="#000ff0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <View
            android:onClick="eeee"
            android:background="#000f0f"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <in.goodiebag.example.widget.RingBackgroundView
        android:layout_marginTop="20dp"
        android:id="@+id/ring"
        android:background="#000000"
        android:layout_width="44dp"
        app:bgColor="#00ffff"
        app:bgLineWidth="1px"
        app:proColor="#ff0000"
        app:proLineWidth="2px"
        android:layout_height="44dp"/>

    <in.goodiebag.example.widget.FlowLayout
        android:id="@+id/flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"/>
</LinearLayout>
